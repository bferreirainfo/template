   <rule class="net.sourceforge.pmd.lang.rule.XPathRule" language="JAVA" dfa="false" externalInfoUrl="" message="Switch statements should have a default label" name="SwitchStmtsShouldHaveDefault" typeResolution="true">
      <description>
